{
  "name": "apollo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "storybook": "turbo run storybook",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "dev-storybook": "concurrently \"turbo run storybook\" \"turbo run dev\"",
    "check-types": "turbo run check-types",
    "sync": "sherif"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "prettier": "^3.5.3",
    "sherif": "^1.4.0",
    "turbo": "^2.4.4",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.5.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
