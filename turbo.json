{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "^build-storybook"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "storybook-static/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "format": {
      "dependsOn": ["^format"]
    },
    "storybook": {
      "dependsOn": ["^storybook"]
    },
    "dev-storybook": {
      "dependsOn": ["^dev-storybook"]
    },
    "build-storybook": {
      "inputs": ["src/**", "stories/**"],
      "outputs": ["storybook-static/**"]
    }
  }
}
